<div class="container">
   <div class="row">
    <div class="col-3"></div>
      <div class="col-6 jumbotron">
        <%= form_with model: @question, local: true do |form| %>
            <div class="form-group " >
              <strong><%= form.label :question_title %></strong>
              <%= form.text_field :question_title, class: 'form-control' %>
            </div>
            <div class="form-group">
              <strong><label>Select Topics</label></strong><br>
              <% topic_lists.each do |topic| %>
                <% if @question.topics.include?(topic)%>
                  <%= check_box_tag 'topics[ids][]',topic.id, true, id: "topic_#{topic.id}" %>
                  <span> <%= topic.topic_name %></span><br>
                <% else %>
                  <%= check_box_tag 'topics[ids][]',topic.id, false, id: "topic_#{topic.id}" %>
                  <span><%= topic.topic_name %></span><br><br>
                <% end %>
              <% end %>
            </div>
            
            <%= form.submit @question.new_record? ? 'Create' : 'Update', class: 'btn btn-primary' %>
            <%= link_to 'Back', questions_path, class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
</div>
