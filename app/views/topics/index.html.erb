<br>
<div class="container">
  <%= form_with model: @topic, local: true do |f| %>
    <div class="row">
      <div class="col-4"></div>
      <div class="col-5 jumbotron">
        <div class="form-group font-weight-bold h3 heading">
          <label>Select your Interest</label>
        </div>
        <div class="form-group">
          <% topic_lists.each do |topic| %>
            <%= check_box_tag 'topics[ids][]',topic.id, false, id: "topic_#{topic.id}" %>
            <span> <%= topic.topic_name %></span> <br><br>
          <% end %>
        </div>
        <%= f.submit "Update",class: 'btn btn-primary '%>
        <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
 
      </div>
    </div>
  <% end %>
  <div class="col-4"></div>
</div>


